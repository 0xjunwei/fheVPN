{
    "manifest_version": 2,
    "name": "VPN Extension with MetaMask",
    "version": "1.0",
    "description": "A VPN extension that accepts payments via MetaMask.",
    "permissions": [
      "storage",
      "proxy",
      "activeTab",
      "webRequest",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "scripts": ["dist/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  